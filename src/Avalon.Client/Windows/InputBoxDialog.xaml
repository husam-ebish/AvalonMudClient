<ui:ContentDialog
    x:Class="Avalon.InputBoxDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Input"
    PreviewKeyDown="ContentDialog_PreviewKeyDown"
    PrimaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonText="OK"
    DefaultButton="Secondary"    
    Loaded="ContentDialog_Loaded">

    <StackPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <!-- Content body -->
        <TextBlock x:Name="TextBlockCaption" Text="What input would you like to enter?" TextWrapping="Wrap"></TextBlock>
        <TextBox x:Name="TextBoxInput" ui:ControlHelper.CornerRadius="0" Margin="0,5,0,0"></TextBox>
    </StackPanel>

</ui:ContentDialog>
